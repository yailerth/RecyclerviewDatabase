<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item  name="cardBackgroundColor">@color/colorAccent</item>
        <item  name="cardForegroundColor">@color/colorPrimary</item>
        <item  name="cardElevation">0dp</item>
        <item name="rippleColor">@color/design_default_color_surface</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>

    </style>

</resources>